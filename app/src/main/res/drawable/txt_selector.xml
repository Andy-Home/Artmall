<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Non focused states-->
    <item android:color="#A4A4A4" android:state_focused="false" android:state_pressed="false" android:state_selected="false"></item>

    <item android:color="#228B22" android:state_focused="false" android:state_pressed="false" android:state_selected="true"></item>
    <!--Focused states-->
    <item android:color="#228B22" android:state_focused="true" android:state_pressed="false" android:state_selected="false"></item>
    <item android:color="#228B22" android:state_focused="true" android:state_pressed="false" android:state_selected="true"></item>
    <!--Pressed-->
    <item android:color="#228B22" android:state_pressed="true" android:state_selected="true"></item>
    <item android:color="#228B22" android:state_pressed="true"></item>
</selector>